.visa-title-list {
  position: relative;
  display: flex;
  flex-wrap wrap
  transition .3s ease
  margin: -34px 0 -30px 0;


  &__column {
    display: flex;
    flex-direction column
    margin-bottom: 30px
    width: 370px
    margin-right 64px

    &:nth-child(3) {
      margin-right: 0
    }
  }

  &__item {
    margin: 34px 0 0 0
    transition .3s ease
  }
}


.visa-title {
  display: flex;
  align-items center
  width: max-content;
  cursor pointer

  &__text {
    position: relative;
    padding-bottom 5px
    font-family: "Proxima Nova Semibold";
    font-size: 28px;
    color: #505050;

    &:before {
      content ''
      position: absolute;
      bottom 0
      width: 100%
      height: 1px
      border-bottom: 1px dashed #666666;
    }
  }

  &__icon {
    position: relative;
    margin-left: 18px
    width: 10px
    height: 10px

    &:before {
      content ''
      position: absolute;
      top 0
      left 0
      width: 10px
      height: 10px
      background: url('../../img/icon-arrow-3.svg')
      background-size contain
      transform rotate(90deg)
    }
  }

  &:hover {
    .visa-title__text {
      &:before {
        display: none
      }
    }
  }

  &_active {
    .visa-title__text {
      &:before {
        display: none
      }
    }

    .visa-title__icon {
      &:before {
        transform rotate(270deg)
      }
    }
  }
}

@media (max-width: 1350px) {
  .visa-title-list {
    margin-top: -30px;

    &__column {
      width: 324px
      margin-right 50px
    }

    &__item {
      margin-top: 30px
    }
  }

  .visa-title {
    &__text {
      font-size: 24px;
    }

    &__icon {
      margin-left: 14px
      width: 8px
      height: 8px

      &:before {
        width: 8px
        height: 8px
      }
    }
  }
}

@media (max-width: 1150px) {
  .visa-title-list {
    margin-top: -24px

    &__column {
      width: 270px
    }

    &__item {
      margin-top: 24px
    }
  }

  .visa-title {
    &__text {
      font-size: 20px;
    }
  }
}

@media (max-width: 1000px) {
  .visa-title-list {
    margin-bottom: -16px

    &__column {
      margin-right: 80px
      margin-bottom: 16px
    }
  }
}

@media (max-width: 800px) {
  .visa-title-list {

    &__column {

      &:nth-child(2) {
        margin-right: 0
      }
    }
  }
}

@media (max-width: 700px) {
  .visa-title-list {

    &__column {
      margin-right: 24px
      width: 256px
    }
  }


  .visa-title {
    &__text {
      font-size: 19px;
    }

    &__icon {
      margin-left: 10px
      width: 7px
      height: 7px

      &:before {
        width: 7px
        height: 7px
      }
    }
  }
}

@media (max-width: 600px) {
  .visa-title-list {
    margin-top: -15px
    margin-bottom: -14px

    &__column {
      margin-right: 20px
      margin-bottom: 14px
      width: 222px
    }

    &__item {
      margin-top: 15px
    }
  }


  .visa-title {
    &__text {
      padding-bottom: 2px
      font-size: 17px;
    }
  }
}


@media (max-width: 520px) {
  .visa-title-list {
    margin-top: -18px
    margin-bottom: 0

    &__column {
      margin-right: 0
      margin-bottom: 0
      width: 100%
    }


  }
}