textarea.input {
  padding-top 20px
  height: auto;
  resize: none;
}

@media (max-width: 1050px) {
  textarea.input {
    padding-top 16px
  }
}

.input {
  padding 5px 28px 5px 28px
  max-width: 100%;
  height: 62px;
  border-radius: 5px;
  background-color: #ffffff;

  color: darken(#4e4e4e, 40%);
  font-family: "Proxima Nova Semibold";
  font-size: 17px;
  transition .3s ease

  &_grey {
    box-shadow: inset -1px 2px 10px rgba(0, 0, 0, 0.07);
    background-color: #f6f6f6;

    &:focus {
      box-shadow: inset -1px 2px 10px rgba(0, 0, 0, 0.2);
    }
  }

  &_shadow {
    box-shadow: 0 7px 20px rgba(0, 0, 0, 0.07);

    &:focus {
      box-shadow: 0 7px 20px rgba(0, 0, 0, 0.13);
    }
  }

  &::placeholder {
    color: #4e4e4e;
    opacity: 1;
  }

  &:-ms-input-placeholder {
    color: #4e4e4e;
  }

  &::-ms-input-placeholder {
    color: #4e4e4e;
  }
}

@media (max-width: 1050px) {
  .input {
    padding 5px 20px 5px 20px
    height: 58px
    font-size: 16px
  }
}

@media (max-width: 600px) {
  .input {
    padding 5px 17px 5px 17px
    height: 52px
    font-size: 15px
  }
}