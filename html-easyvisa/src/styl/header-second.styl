.header-second {
  position: relative;
  z-index 1
  box-shadow: 0 0 35px rgba(29, 29, 29, 0.1);
  background-color: #ffffff;
  border-top: 1px solid #f3f3f3

  &__container {
    display: flex;
    justify-content space-between
    align-items center
    height: 83px;
  }

  &__logo {
    .logo__img {
      width: 119px;
      height: 50px;
    }
  }
}

.header-second-nav {
  display: flex;
  height: 100%

  &__item {
    position: relative;
    display: flex;
    justify-content center
    align-items center
    margin: 0 17px
    color: #3d3d3d;
    font-family: "Proxima Nova Semibold";
    font-size: 17px;
    transition .3s

    &:first-child {
      margin-left: 0
    }

    &:last-child {
      margin-right: 0
    }

    &:before {
      content: ''
      position: absolute;
      bottom: 0
      width: 100%
      height: 0
      background-color: #ffea00;
      opacity 0
      transition .3s
    }

    &:hover {
      text-shadow: #3d3d3d 0.5px 0 0;

      &:before {
        height: 4px
        opacity 1
      }
    }
  }
}

@media (max-width: 1350px) {
  .header-second-nav {
    &__item {
      margin: 0 12px
    }
  }
}

@media (max-width: 1250px) {
  .header-second {
    &__container {
      height: 70px
    }

    &__logo .logo__img {
      height: auto;
      width: 96px;
    }
  }

  .header-second-nav {
    &__item {
      font-size: 15px
    }
  }
}

@media (max-width: 1150px) {
  .header-second-nav {
    &__item {
      margin: 0 9px
    }
  }
}

@media (max-width: 1050px) {
  .header-second {
    display: none
  }
}