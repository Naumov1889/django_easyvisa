.insurance-page-form-section {
  margin-top: -10px

  .box-list__item {
    z-index 2

    &:nth-child(1) {
      z-index 3
    }

    &:nth-child(2) {
      z-index 3
    }

    &:nth-child(4) {
      z-index 1
    }
  }
}

.insurance-page-text-section {
  &__grid {
    display: flex;
    justify-content space-between

  }

  &__left {
    margin-bottom: 44px
    max-width 710px
  }

  &__right {
    position: relative;
    z-index 2
    margin: -66px 46px 0 30px
    width: 26.2%
  }

  &__img-list {
    display: flex;
    align-items flex-start
    margin-top: -18px
  }

  &__img {
    z-index 4

    &:nth-child(1) {
      margin-right: 44px
    }

    &:nth-child(2) {
      margin: -11px 36px 0 0
    }

    &:nth-child(3) {
      margin-right: 0
    }

  }
}

@media (max-width: 1250px) {
  .insurance-page-text-section {
    &__right {
      margin: -30px 46px 0 30px
    }
  }
}

@media (max-width: 1050px) {
  .insurance-page-text-section {
    &__right {
      margin: -20px 24px 0 30px
    }

    &__img {
      &:nth-child(1) {
        margin-right: 22px
      }

      &:nth-child(2) {
        margin: -11px 26px 0 0
        z-index 4
      }
    }
  }
}

@media (max-width: 900px) {
  .insurance-page-text-section {
    &__img {
      &:nth-child(3) {
        margin-top: -80px
      }
    }
  }
}

@media (max-width: 800px) {
  .insurance-page-text-section {
    &__grid {
      flex-direction column
    }

    &__left {
      margin-bottom: 20px
    }

    &__right {
      margin: 0 50px 0 auto
      width: 36.2%
    }

    &__img-list {
      position: relative;
    }

    &__img {
      &:nth-child(1) {
        margin-top: -80px;
        margin -80px 0 0 0
      }

      &:nth-child(2) {
        margin-left: -50px
      }

      &:nth-child(3) {
        margin-top: -10px
      }
    }
  }
}

@media (max-width: 600px) {
  .insurance-page-text-section {
    &__right {
      margin: 0
      width: unset

      .elem-with-yellow-square {
        margin: 7px 0 7px 0
        width: 48%
      }

      img {
        width: 100%
        height 130px
        object-fit cover
      }
    }

    &__img-list {
      justify-content space-between
      margin 0
    }

    &__img {
      margin: 7px 0 7px 0 !important
      width: 48%

      img {
        width: 100%
        height 130px
        object-fit cover
      }

      &:nth-child(1) {
        position: absolute;
        right 0
        top: -144px

        img {
          object-position right
        }
      }

    }
  }
}

@media (max-width: 400px) {
  .insurance-page-text-section {
    &__right {
      img {
        height 100px
      }
    }

    &__img {
      img {
        height 100px
      }

      &:nth-child(1) {
        top: -114px;
      }
    }
  }
}

@media (max-width: 1050px) {
  .insurance-page-form-section {
    margin-top: -20px
    padding-bottom: 26px
  }
}

@media (max-width: 950px) {
  .insurance-page-form-section {
    margin-top: 0

    .box-list {
      .box-list__item {
        &:nth-child(3) {
          width: 100% !important
        }
      }
    }
  }
}