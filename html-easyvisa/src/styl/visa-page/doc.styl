.doc-list {
  padding 0 30px 0 30px
  height: 482px;
  overflow-y auto

  &__item {
    margin-bottom: 25px
  }
}

.doc {
  &__counter-n-title {
    display: flex;
    align-items center
  }

  &__counter {
    display: flex;
    justify-content center
    align-items center
    padding-top: 1px
    margin-right: 10px
    width: 23px
    height: 23px
    color: #454545;
    font-family: "Proxima Nova Semibold";
    background-color: #ffea00;
    border-radius 50%
  }

  &__title {
    padding-top: 2px
    font-family: "Proxima Nova Semibold"
    color: #454545;
    font-size: 22px;
  }

  &__text {
    margin-top: 8px
    color: #595959;
    font-size: 18px;
    line-height: 22.19px;

    a {
      text-decoration: underline;

      &:hover {
        text-decoration: none
      }
    }
  }
}

.visa-page-doc-section {
  &__grid {
    display: flex;
  }

  &__left {
    border-radius 0 5px 5px 5px

    .title {
      padding: 20px 30px 0 30px
    }
  }

  &__right {
    padding 20px 24px 22px 24px
    margin-left: 20px
    min-width: 345px;

    .form {
      display: block;
      margin-bottom: 0
      font-size: 0

      &__elem {
        width: 100%
      }

      textarea {
        height: 170px
      }
    }
  }
}

@media (max-width: 1050px) {
  .visa-page-doc-section {
    &__left {
      .title {
        padding: 20px 20px 0 20px
      }
    }

    &__right {
      margin-left: 15px
      padding 20px 20px 22px 20px
      min-width: 300px;

      .form {
        textarea {
          height: 140px
        }
      }
    }
  }

  .doc-list {
    padding 0 20px 0 20px
    height: 430px;

    &__item {
      margin-bottom: 26px
    }
  }

  .doc {
    &__counter {
      padding-top: 0
      margin-right: 10px
      width: 22px
      height: 22px
      font-size: 15px
    }

    &__title {
      padding-top: 2px
      font-size: 20px;
    }

    &__text {
      margin-top: 8px
      font-size: 16px;
      line-height: unset
    }
  }
}

@media (max-width: 850px) {
  .visa-page-doc-section {
    &__grid {
      flex-direction column
    }

    &__right {
      margin 22px 0 0 0
      min-width unset
    }
  }

  .doc-list {
    height: 300px;
  }
}

@media (max-width: 600px) {
  .visa-page-doc-section {

    &__left {
      .title {
        padding: 17px 17px 0 17px;
      }
    }

    &__right {
      padding: 17px 17px 20px 17px;
    }
  }

  .doc-list {
    padding 0 17px 0 17px
    height: 230px;

    &__item {
      margin-bottom: 18px
    }
  }

  .doc {

    &__title {
      font-size: 19px;
    }

    &__text {
      margin-top: 8px
      font-size: 15px;
      line-height: unset
    }
  }
}