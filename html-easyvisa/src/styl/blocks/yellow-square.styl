.elem-with-yellow-square {
  position: relative;

  &__yellow-square {
    position: absolute;
    z-index 1
    top: -13px
    right: -16px
  }

  &__not-yellow-square {
    position: relative;
    z-index 2
  }

  &_borderlike {
    display: block
    max-width: 100%;
    width: max-content;
    font-size: 0
    line-height: 0

    &:hover {
      .elem-with-yellow-square__not-yellow-square {
        transform translate3d(2px, 2px, 0)
      }
    }

    .elem-with-yellow-square__not-yellow-square {
      border-radius 5px
      transition .3s ease
    }

    .elem-with-yellow-square__yellow-square {
      top: 10px
      right -10px
      width: 100%;
      height: 100%
    }

    &_left {
      .elem-with-yellow-square__yellow-square {
        right auto
        left -10px
      }

      &:hover {
        .elem-with-yellow-square__not-yellow-square {
          transform translate3d(-2px, 2px, 0)
        }
      }
    }
  }
}


.yellow-square {
  width: 60px;
  height: 60px;
  border-radius: 5px;
  background-color: #feec2c;
}

@media (max-width: 1050px) {
  .elem-with-yellow-square {
    &_borderlike {
      &:hover {
        .elem-with-yellow-square__not-yellow-square {
          transform translate3d(0, 0, 0)
        }
      }

      .elem-with-yellow-square__yellow-square {
        top: 7px
        right -7px
      }

      &_left {
        .elem-with-yellow-square__yellow-square {
          left -7px
        }
      }
    }
  }
}

@media (max-width: 600px) {
  .elem-with-yellow-square {
    &_borderlike {
      .elem-with-yellow-square__yellow-square {
        top: 4px
        right -4px
      }

      &_left {
        .elem-with-yellow-square__yellow-square {
          left -4px
        }
      }
    }
  }
}