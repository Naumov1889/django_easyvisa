.about-page-video-section {

}

.video-n-thumb {
  position: relative;
  height: 520px
  border-radius 5px

  iframe {
    border-radius 5px
  }

  &:before {
    content ''
    position: absolute;
    top 3px
    left 3px
    right 2px
    bottom 2px
    background: #000
    border-radius 5px
  }

  &__elem-with-yellow-square.elem-with-yellow-square {
    font-size: unset
    line-height: unset
    height: 100%
  }

  .elem-with-yellow-square__not-yellow-square {
    height: 100%
  }

  &__thumb {
    position: absolute
    left 0
    top 0
    width: 100%
    height: 100%
    z-index 100
    border-radius 5px
    cursor: pointer;

    &:hover {
      .video-n-thumb__overlay {
        background-color: rgba(24, 24, 24, 0.8);
      }
    }
  }

  &__img {
    height: 100%
    object-fit cover
    border-radius 5px
  }

  &__overlay {
    position: absolute;
    z-index 1
    width: 100%
    height: 100%
    left 0
    top 0
    background-color: rgba(24, 24, 24, 0.7);
    border-radius 5px
    transition .3s ease
  }

  &__text-n-btn {
    position: absolute;
    z-index 2
    width: 100%
    height: 100%
    display: flex;
    flex-direction column
    justify-content center
    align-items center
  }

  &__btn {
    position: relative;
    margin-top: 6px;
    width: 91px;
    height: 91px;
    box-shadow: 0 20px 21px rgba(255, 234, 0, 0.1);
    background-color: #ffea00;
    border-radius 50%

    .icon {
      position: absolute;
      left 36px
      top: 50%
      transform translateY(-50%)
      width: 26px;
      height: 26px;
    }
  }

  &__video {
    position: absolute;
    top 0
    left 0
    width: 100%
    height: 100%
  }

  &__video-container {
    width: 100%
    height: 100%
  }
}

@media (max-width: 1050px) {
  .video-n-thumb {
    &__btn {
      width: 70px;
      height: 70px;

      .icon {
        left 29px
        width: 20px;
        height: 20px;
      }
    }
  }
}

@media (max-width: 850px) {
  .video-n-thumb {
    height: 470px
  }
}

@media (max-width: 750px) {
  .video-n-thumb {
    height: 400px
  }
}

@media (max-width: 600px) {
  .video-n-thumb {
    height: 320px

    &__btn {
      margin-top: 0
      width: 60px;
      height: 60px;

      .icon {
        left 25px
        width: 17px;
        height: 17px;
      }
    }
  }
}

@media (max-width: 500px) {
  .video-n-thumb {
    height: 280px
  }
}

@media (max-width: 400px) {
  .video-n-thumb {
    height: 220px

    &__text.title {
      font-size: 24px;
    }

    &__btn {
      margin-top: 0
      width: 50px;
      height: 50px;

      .icon {
        left 20px
        width: 15px;
        height: 15px;
      }
    }
  }
}