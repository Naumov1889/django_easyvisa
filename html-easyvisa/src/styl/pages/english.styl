.english-page {
  .title_h1 {
    margin-bottom: 0
  }
}

@media (max-width: 450px) {
  .english-page {
    .title__text_extra {
      display: block;
    }
  }
}

.english-level-section {
  padding-top: 56px

  .box-list {
    margin: 0 -10px 0 -10px
  }

  .box-list__item {
    margin: 0 10px 0 10px
    width: calc(50% - 20px)
    height: 138px
  }

  &__text {
    font-family: "Proxima Nova Semibold";
    font-size: 33px
    color: #4e4e4e;
  }

  .elem-with-yellow-square__yellow-square {
    top: -12px;
    right: auto;
    left: -44px;
  }
}

.english-page-plans-section {
  font-family: "Proxima Nova Semibold";

  .box {
    padding-top: 42px
  }

  &__text-1 {
    font-size: 80px;
    color: #303030;
  }

  &__text-2 {
    margin-bottom 6px
    font-size: 27px;
    color: #454545;
  }

  &__text-3 {
    font-family: "Proxima Nova Reg";
    font-size: 17px;
    color: darken(#595959, 10%);

    b {
      font-family: "Proxima Nova Semibold";
    }

    .rouble {
      font-size: 16px
    }

    .text_line-through {
      color: darken(#898989, 10%);
    }
  }

  &__text-4 {
    margin-top: 10px
    font-size: 29px;
    color: #454545;

    .rouble {
      font-size: 28px
    }
  }
}

@media (max-width: 1250px) {
  .english-level-section {
    .box-list__item {
      height: 110px
    }

    &__text {
      font-size: 30px
    }

    .elem-with-yellow-square__yellow-square {
      top: -7px
      left: -26px;
      width: 50px
      height: 50px
    }
  }
}

@media (max-width: 1050px) {
  .english-level-section {
    padding-top: 36px

    .box-list__item {
      height: 90px
    }

    &__text {
      font-size: 24px
    }

    .elem-with-yellow-square__yellow-square {
      top: -8px;
      left: -13px;
      width: 44px;
      height: 44px;

    }
  }

  .english-page-plans-section {
    .box {
      padding-top: 30px;
    }

    &__text-1 {
      font-size: 56px;
    }

    &__text-2 {
      margin-bottom 2px
      font-size: 21px;
    }

    &__text-3 {
      font-size: 16px;

      .rouble {
        font-size: 15px
      }
    }

    &__text-4 {
      margin-top: 8px
      font-size: 26px;

      .rouble {
        font-size: 25px
      }
    }

    .elem-with-yellow-square__yellow-square {
      width: 50px
      height: 50px
      top: -5px;
      right: -11px;
    }
  }
}

@media (max-width: 800px) {
  .english-level-section {

    .box-list {
      flex-direction column
      margin: -7px 0 -7px 0
    }

    .box-list__item {
      margin: 7px 0 7px 0
      width: 100%
    }
  }
}

@media (max-width: 800px) {
  .english-level-section {
    padding-top: 28px
  }
}

@media (max-width: 600px) {
  .english-level-section {
    padding-bottom: 16px;

    .box-list__item {
      height: 74px;
      padding: 10px 14px 10px 14px;
    }

    &__text {
      font-size: 20px
    }

    .elem-with-yellow-square__yellow-square {
      top: -9px;
      width: 40px;
      height: 40px;
    }
  }

  .english-page-plans-section {
    .box {
      width: 100% !important
      padding-top: 26px;
    }

    &__text-1 {
      font-size: 48px;
    }

    &__text-2 {
      margin-bottom 2px
      font-size: 19px;
    }

    &__text-3 {
      font-size: 15px;

      .rouble {
        font-size: 14px
      }
    }

    &__text-4 {
      font-size: 22px;

      .rouble {
        font-size: 21px
      }
    }

    .elem-with-yellow-square__yellow-square {
      width: 50px
      height: 50px
      top: -5px;
      right: -11px;
    }
  }
}

.english-text-section-1 {
  &__grid {
    display: flex;
    justify-content space-between
  }

  &__left {
    margin-right: 36px
    max-width 836px
  }

  .box-list {
    flex-direction column

    .box {
      margin-bottom: 30px
      width: 100%
      min-width: 315px;
    }
  }
}

.english-text-section-2 {
  &__img {
    margin: -78px 0 16px 74px
    float: right
  }

  li {
    margin-bottom: 22px

    &:before {
      width: 9px
      height: 9px
    }

    b {
      font-family: "Proxima Nova Semibold";
      font-size: 22px
      color #393939
    }
  }

  .btn {
    margin: 36px 0 0 18px;
  }
}


.english-text-section__btn {
  width: 336px;
}

@media (max-width: 1250px) {
  .english-text-section-2 {

    &__img {
      margin: -64px 0 16px 30px
      width: 350px
    }
  }
}

@media (max-width: 1050px) {
  .english-text-section-1 {
    &__grid {
      display: flex;
      flex-direction column
    }

    &__left {
      margin-right: 0
      max-width unset
    }

    &__right {
      margin-top: 36px
    }

    .box-list {
      flex-direction row

      .box {
        min-width: unset
      }
    }
  }

  .english-text-section-2 {
    li {
      b {
        font-size: 20px
      }
    }

    .btn {
      margin: 28px 0 0 18px;
    }
  }
}

@media (max-width: 850px) {
  .english-text-section-2 {
    &__img {
      width: 260px
      height: 300px

      img {
        width: 100%
        height: 100%
        object-fit cover
      }
    }
  }
}

@media (max-width: 650px) {
  .english-text-section-2 {
    &__img {
      display: none
    }
  }
}


@media (max-width: 600px) {
  .english-text-section__btn {
    width: 100%
  }

  .english-text-section-1 {
    &__right {
      margin-top: 28px
    }
  }

  .english-text-section-2 {
    li {
      margin-bottom: 16px

      &:before {
        width: 8px
        height: 8px
      }

      b {
        font-size: 19px
      }
    }

    .btn {
      margin: 20px 0 0 0;
    }
  }
}
