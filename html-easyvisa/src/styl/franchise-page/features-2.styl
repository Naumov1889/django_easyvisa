  //}
}


@media (max-width: 1050px) {
  .franchise-page-features-2-section {
    .box-list {
      margin-top: -10px

      &__item {
        padding 20px 40px 0 0
      }
    }
  }
}

@media (max-width: 850px) {
  .franchise-page-features-2-section {
    .slider {
      margin-top: -16px
    }

    .box-list {
      align-items flex-start
      margin: 0 !important

      &__item {
        align-items center
        text-align center
        margin 0 !important
        padding-right: 0
        width: 100% !important
        min-width auto !important

        .box__text {
          max-width unset !important
        }

        .box__icon-wrapper {
          transform-origin center
        }
      }
    }
  }
}