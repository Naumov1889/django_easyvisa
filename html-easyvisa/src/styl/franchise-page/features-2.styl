.franchise-page-features-2-section {
  .box-list {
    margin-top: -16px
    justify-content flex-start

    &__item {
      display: flex;
      flex-direction column
      justify-content flex-start
      align-items flex-start
      text-align left
      padding 36px 40px 0 0

      img {
        object-fit cover
      }

      .box__icon-wrapper {
        display: flex;
        align-items center
        height: 98px;
        font-size: 0
        line-height: 0
        transform-origin left
      }
    }
  }

