.show-more {
  &_active {
    position: relative;

    .show-more__content {
      overflow hidden
      transition: max-height 0.3s ease-out;
    }

    .show-more__shadow {
      position: absolute;
      z-index 5
      left 0
      bottom 0
      right 0
      background: linear-gradient(0deg, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%);
      transition .2s
    }

    .show-more__btn {
      position: absolute
      z-index 6
      left 0
      bottom 0
      width: 100%
      height: 100%
      cursor pointer

      &:before {
        content ''
        position: absolute;
        bottom 10px
        left 50%
        transform translateX(-50%)
        width: 20px
        height: 20px
        background: url("../../img/icon-arrow.svg")
        filter invert(50%)
      }
    }

    &.show-more_open {
      .show-more__btn {
        display: none
      }

      .show-more__shadow {
        height: 0 !important
      }
    }
  }
}