.swap-places {
  position: absolute;
  z-index 4
  top: 50%;
  right: 20px;
  width: 30px;
  height: 30px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  transform: translateY(-50%);
  cursor: pointer;
}

.swap-places:hover .swap-places__arrow.\--top {
  transform: translateX(2px);
}

.swap-places:hover .swap-places__arrow.\--bottom {
  transform: rotate(.5turn) translateX(2px);
}

.swap-places__arrow {
  width: 13px;
  height: 13px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  transition: transform .2s ease-in-out, -webkit-transform .2s ease-in-out;
  background-image: url("../../img/icon-arrow-2.svg")
  background-repeat: no-repeat
}

.swap-places__arrow.\--bottom {
  transform: rotate(.5turn);
}

@media (max-width: 1050px) {
  .swap-places {
    right: 12px;
  }

  .swap-places__arrow {
    width: 12px;
    height: 12px;
  }

  .swap-places:hover .swap-places__arrow.\--top {
    transform: translateX(0px);
  }

  .swap-places:hover .swap-places__arrow.\--bottom {
    transform: rotate(.5turn) translateX(0px);
  }
}

@media (max-width: 600px) {
  .swap-places {
    width: 34px;
    height: 34px
    right: 12px
    top: auto;
    bottom: -24px;
    transform rotate(90deg)
    background-color: #ffffff;
    box-shadow: 0 12px 32px rgba(43, 43, 43, 0.1);
    border-radius 5px
    border 1px solid lighten(lightgrey, 20%)
  }


  .swap-places__arrow {
    width: 11px;
    height: 11px;
  }
}