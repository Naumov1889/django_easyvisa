.map-n-contact {
  position: relative;
  border-bottom 10px solid #ffea00

  &__map-overlay {
    display: none
  }

  &__map {
    position: absolute;
    z-index 1
    top: 0
    left 0
    width: 100%
    height: 100%
  }

  &__container {
    height: 100%
  }

  &__box {
    position: relative;
    z-index 3
    max-width: 400px;
    width 100%
    padding 12px 34px 36px 34px
    box-shadow: 0 12px 32px rgba(43, 43, 43, 0.07);
    border-radius: 5px;
    background-color: #ffffff;

    .box__content {
      padding: 1.5rem 2rem
    }

    .title {
      margin-top: 10px
    }
  }

  &__social {
    margin-left: -4px
  }

  &__btn {
    margin-top: 26px;
    width: 248px;
  }

  &__map-toggler {
    display: none
  }
}

.contact-name-n-value {
  margin-top: 18px

  &:first-child {
    margin-bottom: 24px
  }

  &__name {
    margin-bottom: 4px
    color: #5c5c5c;
    font-size: 19px
  }

  &__value {
    display: block;
    width: max-content;
    font-family: "Proxima Nova Semibold";
    color: #323232;
    font-size: 21px;
    line-height: 29px

    &_phone {
      margin-top: 4px

      &:nth-of-type(1) {
        margin-top: 0
      }
    }
  }
}


@media (max-width: 1050px) {
  .map-n-contact {
    border-bottom 7px solid #ffea00

    &__box {
      padding: 8px 20px 24px 20px
      max-width: 340px;
    }

    &__btn {
      width: 100%
    }
  }

  .contact-name-n-value {
    margin-top: 14px

    &:first-child {
      margin-bottom: 20px
    }

    &__name {
      margin-bottom: 2px
      font-size: 17px
    }

    &__value {
      font-size: 19px;
      line-height: 27px

      &_phone {
        margin-top: 4px
      }
    }
  }
}

@media (max-width: 850px) {
  .map-n-contact {
    &__map-overlay {
      display: block;
      position: absolute
      z-index 2
      width: 100%
      height: 100%
      top 0
      left 0
      background-color: rgba(255, 255, 255, 0.5)
      opacity 1
      transition .3s ease
    }

    &__container {
      padding-top: 85px
    }

    &__box {
      margin: 0 auto
      transition .3s ease
      transform translateY(0)

      &_hidden {
        transform translateY(30px)
      }
    }

    &__map-toggler {
      display: block;
      position: absolute
      z-index 4
      left: 3%
      top: 15px
    }
  }
}

@media (max-width: 600px) {
  .map-n-contact {
    display: flex;
    flex-direction column-reverse

    &__map {
      position: static;
      height: 300px
    }

    &__container {
      padding-top: 0
    }

    &__box {
      padding 10px 17px 22px 17px
      max-width: 100%
    }

    &__map-overlay {
      display: none
    }

    &__map-toggler {
      display: none
      //left: 4%
    }
  }

  .contact-name-n-value {
    margin-top: 10px

    &:first-child {
      margin-bottom: 20px
    }

    &__name {
      font-size: 16px
    }

    &__value {
      font-size: 18px;
      line-height: 25px

      &_phone {
        margin-top: 2px
      }
    }
  }
}
