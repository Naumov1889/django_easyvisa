.index-page-courses-section {
  &__btn {
    margin: 0 auto
    max-width: 278px;
  }

  &__second-box-list.box-list {
    margin-top: 3.2%
    margin-bottom: 10px !important

    .box {
      justify-content flex-start
      align-items flex-start
      text-align: left
      padding 28px 16px 26px 28px

      &__title {
        font-size: 22px;
      }

      &__text {
        line-height: 24px;
      }
    }
  }
}

@media (max-width: 1050px) {
  .index-page-courses-section {
    &__first-box-list.box-list {
      .box:nth-child(4) {
        width: 100% !important
      }
    }

    &__second-box-list.box-list {
      margin-top: 30px !important

      .box {
        padding: 24px 17px 22px 17px;

        &__title {
          font-size: 20px;
        }

        &__text {
          line-height: unset
        }
      }
    }
  }
}

@media (max-width: 850px) {
  .index-page-courses-section {
    .tns-ovh {
      overflow visible
    }

    &__first-box-list.box-list {
      margin 0 !important

      .box {
        margin 0 !important
        width: 100% !important
        height: 100%
      }
    }

    .slider-list__item {
      transition .3s ease

      &[aria-hidden="true"] {
        opacity .6
        transform scale(0.92)
      }
    }
  }
}

@media (max-width: 600px) {
  .index-page-courses-section {
    &__second-box-list {
      .box {
        &__title {
          font-size: 18px;
        }
      }
    }
  }
}